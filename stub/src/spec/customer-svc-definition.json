{
  "swagger": "2.0",
  "info": {
    "title": "MyCustomer",
    "description": "MyCustomer service",
    "version": "1.0.0"
  },
  "paths": {
    "/customer": {
      "get": {
        "operationId": "get-customer-list",
        "responses": {
          "200": {
            "description": "Get a full list of customers.",
            "schema": {
              "$ref": "#/definitions/CustomerList"
            }
          }
        }
      }
    },
    "/customer/{id}": {
      "get": {
        "operationId": "get-customer-by-id",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "Get a customer by id.",
            "schema": {
              "$ref": "#/definitions/Customer"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Customer": {
      "type": "object",
      "properties": {
        "age": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "id": {
          "type": "integer"
        }
      }
    },
    "CustomerList": {
      "type": "object",
      "properties": {
        "customers": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Customer"
          }
        }
      }
    }
  }
}